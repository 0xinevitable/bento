{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "build",
    "declaration": true,
    "rootDir": "src",
    "jsx": "react"
  },
  "include": ["src/**/*"]
}

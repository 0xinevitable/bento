{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "build",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "typescript-json/lib/transform"
      }
    ]
  }
}
